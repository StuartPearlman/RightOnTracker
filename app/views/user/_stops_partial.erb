<% if @user.trains.any? %>
<h1>Your stops</h1>
<hr align="left" class="divider">
<table class='pure-table'>
	<thead>
		<tr>
			<th>
				Stop Name
			</th>
			<th>
				Time
			</th>
			<th>
				Days
			</th>
			<th>
				Delete
			</th>
		</tr>
	</thead>
	<% @user.trains.each do |train| %>
	<tbody>
		<tr>
			<td> <%= train.stop %> </td>
			<td> <%= train.time %> </td>
			<td> <%= day_converter(train.days)%> </td>
			<td>
				<form action='/users/<%= @user.id %>/trains/<%= train.id %>' method="post">
					<input class="pure-button delete" id="delete-train" type="submit" value="Delete">
				</form>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<% end %>