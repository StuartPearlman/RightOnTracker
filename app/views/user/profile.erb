<div class="profile">
	<div class="holder">
		<h1>Your registered phone number </h1>
		<hr class="divider" align="left">
		<div class="lead"><i><%= @user.phone.insert(3,'-').insert(7,'-') %></i></div>

		<%= erb :"user/_stops_partial", :layout => false %>

		<h1>Add a new stop</h1>
		<hr align="left" class="divider">
		<form class='pure-form' action='/users/<%= @user.id %>/trains/create' method="post">
			<fieldset>
				<div class="pure-g">

					<div class="pure-u-1 pure-u-md-1-2">
						<label for="select-line">Select Line</label>
						<select id="select-line" class="pure-input-1-2" name="line">
							<% lines.keys.each do |line| %>
							<option value="<%= line %>"><%= line %></option>
							<% end %>
						</select>
					</div>

					<div class="pure-u-1 pure-u-md-1-2 convenient" id="Red">
						<label for="select-stop">Select Stop</label>
						<select id="select-stop" class="pure-input-1-2" name="stop">
							<% lines["Red"].each_pair do |id, stop| %>
							<option value="<%= id %>"><%= stop %></option>
							<% end %>
						</select>
					</div>

					<div class="pure-u-1 pure-u-md-1-2 convenient hidden" id="Blue">
						<label for="select-stop">Select Stop</label>
						<select id="select-stop" class="pure-input-1-2" name="stop">
							<% lines["Blue"].each_pair do |id, stop| %>
							<option value="<%= id %>"><%= stop %></option>
							<% end %>
						</select>
					</div>

					<div class="pure-u-1 pure-u-md-1-2 convenient hidden" id="Green">
						<label for="select-stop">Select Stop</label>
						<select id="select-stop" class="pure-input-1-2" name="stop">
							<% lines["Green"].each_pair do |id, stop| %>
							<option value="<%= id %>"><%= stop %></option>
							<% end %>
						</select>
					</div>

					<div class="pure-u-1 pure-u-md-1-2 convenient hidden" id="Brown">
						<label for="select-stop">Select Stop</label>
						<select id="select-stop" class="pure-input-1-2" name="stop">
							<% lines["Brown"].each_pair do |id, stop| %>
							<option value="<%= id %>"><%= stop %></option>
							<% end %>
						</select>
					</div>

					<div class="pure-u-1 pure-u-md-1-2 convenient hidden" id="Purple">
						<label for="select-stop">Select Stop</label>
						<select id="select-stop" class="pure-input-1-2" name="stop">
							<% lines["Purple"].each_pair do |id, stop| %>
							<option value="<%= id %>"><%= stop %></option>
							<% end %>
						</select>
					</div>

					<div class="pure-u-1 pure-u-md-1-2 convenient hidden" id="PurpleExp">
						<label for="select-stop">Select Stop</label>
						<select id="select-stop" class="pure-input-1-2" name="stop">
							<% lines["PurpleExp"].each_pair do |id, stop| %>
							<option value="<%= id %>"><%= stop %></option>
							<% end %>
						</select>
					</div>

					<div class="pure-u-1 pure-u-md-1-2 convenient hidden" id="Yellow">
						<label for="select-stop">Select Stop</label>
						<select id="select-stop" class="pure-input-1-2" name="stop">
							<% lines["Yellow"].each_pair do |id, stop| %>
							<option value="<%= id %>"><%= stop %></option>
							<% end %>
						</select>
					</div>

					<div class="pure-u-1 pure-u-md-1-2 convenient hidden" id="Pink">
						<label for="select-stop">Select Stop</label>
						<select id="select-stop" class="pure-input-1-2" name="stop">
							<% lines["Pink"].each_pair do |id, stop| %>
							<option value="<%= id %>"><%= stop %></option>
							<% end %>
						</select>
					</div>

					<div class="pure-u-1 pure-u-md-1-2 convenient hidden" id="Orange">
						<label for="select-stop">Select Stop</label>
						<select id="select-stop" class="pure-input-1-2" name="stop">
							<% lines["Orange"].each_pair do |id, stop| %>
							<option value="<%= id %>"><%= stop %></option>
							<% end %>
						</select>
					</div>

					<div class="pure-u-1 pure-u-md-1-2">
						<label for="select-days">Select Days</label>
						<label class="pure-checkbox">
							<input type=checkbox name="days[monday]" value="1">Monday
						</label>

						<label class="pure-checkbox">
							<input type=checkbox name="days[tuesday]" value="2">Tuesday
						</label>

						<label class="pure-checkbox">
							<input type=checkbox name="days[wednesday]" value="3">Wednesday
						</label>

						<label class="pure-checkbox">
							<input type=checkbox name="days[thursday]" value="4">Thursday
						</label>

						<label class="pure-checkbox">
							<input type=checkbox name="days[friday]" value="5">Friday
						</label>

						<label class="pure-checkbox">
							<input type=checkbox name="days[saturday]" value="6">Saturday
						</label>

						<label class="pure-checkbox">
							<input type=checkbox name="days[sunday]" value="0">Sunday
						</label>
					</div>

					<div class="pure-u-1 pure-u-md-1-2">
						<label for="select-time">Select Time</label>
						<input id="select-time" class="pure-input-1-2" type="time" name="time">
					</div>

					<input class="pure-button cta" type="submit" value="Add stop">
				</div>
			</fieldset>
		</form>

		<h1> The Danger Zone </h1>
		<hr align="left" class="divider">
		<form action='/users/<%= @user.id %>/delete' method="post">
			<input id="delete-account" class="pure-button cta delete" type="submit" value="Delete account">
		</form>
	</div>
</div>
