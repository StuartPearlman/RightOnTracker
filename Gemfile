source 'https://rubygems.org'
ruby "2.0.0"

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

# Use Thin for our web server
gem 'thin'

gem 'activesupport', '~>4.1'
gem 'activerecord', '~>4.1'

gem 'rake'

# Login encryption
gem "bcrypt"

# Text messaging service
gem "twilio-ruby"

# Parse CTA API XML response data
gem 'nokogiri'

# Job queue
gem 'sidekiq'
gem 'redis'
gem 'foreman'

# Deployment
gem 'heroku-api'
